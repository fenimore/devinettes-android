<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.workingagenda.devinettes">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_3"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.workingagenda.devinettes.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.workingagenda.devinettes.RiddlePanel"
            android:label="@string/riddle_panel"
            android:parentActivityName="com.workingagenda.devinettes.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.workingagenda.devinettes.MainActivity"/>
        </activity>
        <activity
            android:name="com.workingagenda.devinettes.AboutActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.workingagenda.devinettes.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.workingagenda.devinettes.MainActivity"/>
        </activity>
    </application>
</manifest>